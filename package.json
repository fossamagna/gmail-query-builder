{
  "name": "gmail-query-builder",
  "version": "1.1.1",
  "description": "Gmail Query Builder",
  "main": "lib/index.js",
  "types": "./lib/index.d.ts",
  "keywords": [
    "google",
    "gmail",
    "apps-script"
  ],
  "author": {
    "name": "MURAKAMI Masahiko",
    "email": "fossamagna2@gmail.com"
  },
  "repository": "fossamagna/gmail-query-builder",
  "license": "MIT",
  "scripts": {
    "test": "jest",
    "coverage": "cat coverage/lcov.info | coveralls",
    "clean": "rimraf lib dist coverage junit",
    "build": "mkdirp lib && tsc",
    "prebuild:lib": "cp gas/appsscript.json dist/appsscript.json",
    "build:lib": "browserify gas/index.ts -p [ tsify -p tsconfig.gas.json ] -p gasify -o dist/lib.js",
    "preversion": "npm test",
    "version": "npm run build",
    "postversion": "git push && git push --tags"
  },
  "devDependencies": {
    "@google/clasp": "2.3.0",
    "@types/jest": "25.2.1",
    "browserify": "16.5.1",
    "coveralls": "^3.0.2",
    "gasify": "1.0.0",
    "jest": "25.5.1",
    "jest-cli": "25.4.0",
    "jest-junit": "10.0.0",
    "mkdirp": "1.0.4",
    "rimraf": "3.0.2",
    "ts-jest": "25.3.1",
    "tsify": "4.0.1",
    "tsutils": "3.17.1",
    "typescript": "3.8.3"
  },
  "jest": {
    "testEnvironment": "node",
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "testMatch": [
      "**/__tests__/**/*.test.(ts|js)"
    ],
    "reporters": [
      "default",
      "jest-junit"
    ],
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.ts"
    ],
    "coverageReporters": [
      "text",
      "html",
      "lcov"
    ]
  },
  "jest-junit": {
    "output": "./junit/junit.xml"
  }
}
